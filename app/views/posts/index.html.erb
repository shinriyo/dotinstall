<div id="notice"><%= notice %></div>
<h1>Posts</h1>

<ul>
<% @posts.each do |post| %>
  <li><%= post.title %>
  <%= link_to post.title, post_path(post) %>
  <%= link_to '編集', edit_post_path(post) %>
  </li>
<% end %>
</ul>

<%= link_to 'ホーム', posts_path %> | <%= link_to '新しいダジャレ', new_post_path %>

<script>
$(function() {
  setTimeout(function() {
    $('#notice').fadeOut("slow");
  }, 800);
});
</script>
